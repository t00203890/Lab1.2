//The Fibonacci sequence.
//Fibonacci is a sequence where each number is the sum of the last two.
void setup() {
  delay(3000);
  recursiveFib(30);
}
void loop() {}
int fib(int n) {
  if (n == 0) {
    return 0;
  } else if (n == 1) {
    return 1;
  } else {
    return (fib(n - 1) + fib(n - 2));
  }
}
/*
n = 0 - ans 0
n = 1 - ans 1
n = 2 - > fib(n-1) - 1
        > fib(n-2) - 0
        - ans 1
n = 3 - > fib(2) -2 
         > fib(1) 
         > fib(0) = 1
      > fib(1) - 1
      ans = 2
     */
void recursiveFib(int n) {
  //Recursive Fibonacci solves it by breaking the problem into smaller versions of itself.
  Serial.print("recursive: ");
    for(int i=0; i<n; i++) {
    Serial.print(fib(i));
    Serial.print(", ");
  }
  Serial.print("!Complete!");
}
